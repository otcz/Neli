<fx:root styleClass="interface" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="h2" text="%title.interface.polars" wrapText="true">
        <graphic>
            <SVGPath content="%svg.path.polars" fill="#d8d8d8" scaleX="0.75" scaleY="0.75" styleClass="icon" />
        </graphic>
        <VBox.margin>
            <Insets bottom="10.0" top="40.0" />
        </VBox.margin>
    </Label>
    <HBox spacing="10.0">
        <children>
            <VBox prefWidth="240.0">
                <children>
                    <GridPane hgap="5.0" styleClass="panel" vgap="5.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" />
                            <ColumnConstraints hgrow="SOMETIMES" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                        </rowConstraints>
                        <children>
                            <Label text="%label.azimuth" />
                            <TextField fx:id="azimuth" GridPane.rowIndex="1" />
                            <Label fx:id="azimuthUnits" text="%label.thousandths" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <Label text="%label.distance" GridPane.rowIndex="2" />
                            <TextField fx:id="distance" GridPane.rowIndex="3" />
                            <Label fx:id="distanceUnits" text="%label.meters" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            <Label text="%label.height" GridPane.rowIndex="4" />
                            <TextField fx:id="height" GridPane.rowIndex="5" />
                            <Label fx:id="heightUnits" text="%label.masl" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                            <HBox spacing="10.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="6">
                                <children>
                                    <Button fx:id="cancel" mnemonicParsing="false" styleClass="form-button" text="%button.cancel">
                                        <graphic>
                                            <Region styleClass="svg-icon, close" />
                                        </graphic>
                                    </Button>
                                    <Button fx:id="accept" mnemonicParsing="false" styleClass="form-button" text="%button.accept">
                                        <graphic>
                                            <Region styleClass="svg-icon, save" />
                                        </graphic>
                                    </Button>
                                </children>
                                <padding>
                                    <Insets top="10.0" />
                                </padding>
                            </HBox>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </GridPane>
                    <Label text="%legend.impact.point" wrapText="true" />
                </children>
            </VBox>
<!--            <fx:include source="../blocks/num_keyboard.fxml" />-->
        </children>
    </HBox>
    <stylesheets>
        <URL value="@../../css/variables.css" />
        <URL value="@../../css/general.css" />
    </stylesheets>
</fx:root>
