<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<fx:root maxHeight="29.0" minHeight="29.0" prefHeight="29.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8.0.231" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox maxHeight="29.0" maxWidth="96.0" minHeight="29.0" minWidth="96.0" prefHeight="29.0" prefWidth="96.0" style="-fx-background-color: #606060">
            <children>
                <Label fx:id="label" alignment="TOP_CENTER" contentDisplay="CENTER" ellipsisString="" maxHeight="29.0" minHeight="29.0" prefHeight="29.0" text="Trinca Forzada" textAlignment="CENTER" textOverrun="CLIP" translateY="-2.0">
                    <font>
                        <Font size="5.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="6.0" left="4.0" right="0.0" top="7.0" />
            </padding>

        </HBox>

        <HBox maxHeight="29.0" maxWidth="149.0" minHeight="29.0" minWidth="149.0" prefHeight="29.0" prefWidth="149.0" spacing="4" style="-fx-background-color: #191919">
            <children>
                <Label fx:id="labelOn" alignment="CENTER_RIGHT" contentDisplay="RIGHT" ellipsisString="" maxWidth="55.0" minWidth="55.0" prefWidth="55.0" styleClass="enabled" text="1 sector" textAlignment="RIGHT" >
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Button fx:id="toggle" maxHeight="18.0" maxWidth="32.0" minHeight="18.0" minWidth="32.0" prefHeight="18.0" prefWidth="32.0">
                    <graphic>
                        <Pane>
                            <children>
                                <ImageView fx:id="toggleImage" layoutX="-7.0" layoutY="-3.0">
                                    <image>
                                        <Image url="@/images/toggle.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>

                    </graphic>
                </Button>
                <Label fx:id="labelOff" ellipsisString="" maxWidth="55.0" minWidth="55.0" prefWidth="55.0" styleClass="disabled" text="Invierno" textOverrun="CLIP">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets top="5.0" />
            </padding>

        </HBox>
    </children>

    <stylesheets>
        <URL value="@/css/variables.css" />
        <URL value="@/css/general.css" />
        <URL value="@/css/toggleButton.css" />

    </stylesheets>
</fx:root>
