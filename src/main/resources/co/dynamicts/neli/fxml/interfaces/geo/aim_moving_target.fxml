<fx:root styleClass="interface" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.999-ea"
         xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="h2" text="%title.interface.movil.target" wrapText="true">
        <graphic>
            <SVGPath content="%svg.path.moving.target" fill="#d8d8d8" scaleX="0.75" scaleY="0.75" styleClass="icon" />
        </graphic>
        <VBox.margin>
            <Insets bottom="10.0" top="40.0" />
        </VBox.margin>
    </Label>
    <HBox spacing="10.0">
        <children>
            <VBox>
                <children>
                    <GridPane hgap="5.0" maxWidth="420.0" prefWidth="420.0" styleClass="panel" vgap="5.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" />
                            <ColumnConstraints hgrow="SOMETIMES" />
                            <ColumnConstraints hgrow="SOMETIMES" />
                            <ColumnConstraints hgrow="SOMETIMES" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                        <children>
                            <Label text="%label.interface.moving.target" GridPane.columnSpan="2147483647" />
                            <Label text="%label.latitude" GridPane.columnSpan="2147483647" GridPane.rowIndex="1" />
                            <ToggleButton fx:id="latitudeToggle" maxHeight="-Infinity" maxWidth="-Infinity"
                                          minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                          prefHeight="36.0" prefWidth="72.0" styleClass="toggle-ns" text="%toggle.ns"
                                          GridPane.rowIndex="2" />
                            <LatLngTextField fx:id="latitudeDegrees" iconContent="%svg.path.symbol.degrees"
                                             text="000" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            <LatLngTextField fx:id="latitudeMinutes" iconContent="%svg.path.symbol.minutes"
                                             text="00" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                            <LatLngTextField fx:id="latitudeSeconds" iconContent="%svg.path.symbol.seconds"
                                             text="00.00" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                            <Label text="%label.longitude" GridPane.columnSpan="2147483647" GridPane.rowIndex="3" />
                            <ToggleButton fx:id="longitudeToggle" maxHeight="-Infinity" maxWidth="-Infinity"
                                          minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                          prefHeight="36.0" prefWidth="72.0" styleClass="toggle-we" text="%toggle.we"
                                          GridPane.rowIndex="4" />
                            <LatLngTextField fx:id="longitudeDegrees" iconContent="%svg.path.symbol.degrees"
                                             text="000" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            <LatLngTextField fx:id="longitudeMinutes" iconContent="%svg.path.symbol.minutes"
                                             text="00" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                            <LatLngTextField fx:id="longitudeSeconds" iconContent="%svg.path.symbol.seconds"
                                             text="00.00" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                            <Label text="%label.height" GridPane.columnSpan="2147483647" GridPane.rowIndex="5" />
                            <TextField fx:id="height" GridPane.columnSpan="2" GridPane.rowIndex="6" />
                            <Label text="%label.masl" GridPane.columnIndex="2" GridPane.rowIndex="6" />

                            <Label text="" GridPane.columnSpan="2147483647" GridPane.rowIndex="7" />
                            <Label text="%label.movil.target" GridPane.columnSpan="2147483647" GridPane.rowIndex="8" />

                            <Label text="%label.azimuth" GridPane.columnSpan="2147483647" GridPane.rowIndex="9" />
                            <TextField fx:id="azimuth" GridPane.columnSpan="2" GridPane.rowIndex="10" />
                            <Label fx:id="azimuthUnits" text="%label.thousandths" GridPane.columnIndex="2"
                                   GridPane.rowIndex="10" />
                            <Label text="%label.speed" GridPane.columnSpan="2147483647" GridPane.rowIndex="11" />
                            <TextField fx:id="speed" GridPane.columnSpan="2" GridPane.rowIndex="12" />
                            <Label fx:id="speedUnits" text="%label.kilometers.hour" GridPane.columnSpan="2147483647"
                                   GridPane.columnIndex="2" GridPane.rowIndex="12" />

                            <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnSpan="2147483647"
                                  GridPane.rowIndex="13">
                                <children>
                                    <Button fx:id="cancel" mnemonicParsing="false" styleClass="form-button"
                                            text="%button.cancel">
                                        <graphic>
                                            <Region styleClass="svg-icon, close" />
                                        </graphic>
                                    </Button>
                                    <Button fx:id="accept" mnemonicParsing="false" styleClass="form-button"
                                            text="%button.accept">
                                        <graphic>
                                            <Region styleClass="svg-icon, save" />
                                        </graphic>
                                    </Button>
                                </children>
                                <opaqueInsets>
                                    <Insets />
                                </opaqueInsets>
                                <padding>
                                    <Insets top="10.0" />
                                </padding>
                            </HBox>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </GridPane>
                    <!--<Label text="%legend.impact.point" />-->
                    <!--<Label maxWidth="420.0" text="%legend.name" wrapText="true" />-->
                </children>
            </VBox>
<!--            <fx:include source="../../blocks/num_keyboard.fxml" />-->
        </children>
    </HBox>
    <stylesheets>
        <URL value="@../../../css/variables.css" />
        <URL value="@../../../css/general.css" />
    </stylesheets>
</fx:root>
